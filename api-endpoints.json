{
  "baseURL": "http://localhost:3000",
  "endpoints": {
    "auth": {
      "login": {
        "method": "POST",
        "path": "/auth/login",
        "description": "Faz login com username e senha",
        "auth": false,
        "body": {
          "type": "LoginRequest",
          "required": true,
          "properties": {
            "username": "string",
            "password": "string"
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "type": "LoginResponse",
            "properties": {
              "token": "string (JWT)",
              "user": "User"
            }
          },
          "401": {
            "description": "Credenciais inválidas",
            "type": "ErrorResponse"
          }
        }
      },
      "register": {
        "method": "POST",
        "path": "/auth/register",
        "description": "Registra novo usuário",
        "auth": false,
        "body": {
          "type": "RegisterRequest",
          "required": true,
          "properties": {
            "username": "string",
            "password": "string"
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "type": "LoginResponse"
          },
          "400": {
            "description": "Username já existe ou dados inválidos",
            "type": "ErrorResponse"
          }
        }
      }
    },
    "posts": {
      "list": {
        "method": "GET",
        "path": "/posts",
        "description": "Lista todos os posts",
        "auth": false,
        "responses": {
          "200": {
            "description": "Lista de posts retornada com sucesso",
            "type": "Post[]"
          }
        }
      },
      "search": {
        "method": "GET",
        "path": "/posts/search",
        "description": "Busca posts por termo no título/conteúdo",
        "auth": false,
        "query": {
          "q": {
            "type": "string",
            "required": true,
            "description": "Termo de busca"
          }
        },
        "responses": {
          "200": {
            "description": "Posts encontrados",
            "type": "Post[]"
          }
        }
      },
      "getById": {
        "method": "GET",
        "path": "/posts/:id",
        "description": "Retorna um post pelo ID",
        "auth": false,
        "params": {
          "id": {
            "type": "string",
            "required": true,
            "description": "ID do post"
          }
        },
        "responses": {
          "200": {
            "description": "Post encontrado",
            "type": "Post"
          },
          "404": {
            "description": "Post não encontrado",
            "type": "ErrorResponse"
          }
        }
      },
      "create": {
        "method": "POST",
        "path": "/posts",
        "description": "Cria um novo post",
        "auth": true,
        "body": {
          "type": "CreatePostRequest",
          "required": true,
          "properties": {
            "title": "string",
            "content": "string",
            "summary": "string (opcional)"
          }
        },
        "responses": {
          "201": {
            "description": "Post criado com sucesso",
            "type": "Post"
          },
          "401": {
            "description": "Não autorizado",
            "type": "ErrorResponse"
          }
        }
      },
      "update": {
        "method": "PUT",
        "path": "/posts/:id",
        "description": "Atualiza um post existente",
        "auth": true,
        "params": {
          "id": {
            "type": "string",
            "required": true,
            "description": "ID do post"
          }
        },
        "body": {
          "type": "UpdatePostRequest",
          "required": true,
          "properties": {
            "title": "string (opcional)",
            "content": "string (opcional)",
            "summary": "string (opcional)"
          }
        },
        "responses": {
          "200": {
            "description": "Post atualizado com sucesso",
            "type": "Post"
          },
          "404": {
            "description": "Post não encontrado",
            "type": "ErrorResponse"
          },
          "401": {
            "description": "Não autorizado",
            "type": "ErrorResponse"
          }
        }
      },
      "delete": {
        "method": "DELETE",
        "path": "/posts/:id",
        "description": "Deleta um post",
        "auth": true,
        "params": {
          "id": {
            "type": "string",
            "required": true,
            "description": "ID do post"
          }
        },
        "responses": {
          "204": {
            "description": "Post deletado com sucesso",
            "type": null
          },
          "404": {
            "description": "Post não encontrado",
            "type": "ErrorResponse"
          },
          "401": {
            "description": "Não autorizado",
            "type": "ErrorResponse"
          }
        }
      }
    }
  },
  "authentication": {
    "type": "JWT Bearer Token",
    "header": "Authorization: Bearer <token>",
    "expiration": "1 hour",
    "implementation": "Totalmente integrado com backend"
  },
  "types": {
    "User": {
      "_id": "string",
      "username": "string"
    },
    "Post": {
      "_id": "string",
      "title": "string",
      "content": "string",
      "summary": "string",
      "author": "string (username)",
      "createdAt": "Date",
      "updatedAt": "Date"
    },
    "ErrorResponse": {
      "message": "string",
      "error": "string (opcional)"
    }
  },
  "notes": {
    "authentication": "Sistema JWT totalmente integrado e funcional",
    "contentType": "application/json",
    "timestamps": "Todos os posts incluem createdAt e updatedAt automaticamente via Mongoose",
    "authorization": "Usuários só podem editar/deletar seus próprios posts"
  }
}
